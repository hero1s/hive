--工程名字
PROJECT_NAME = "lhttp"

--目标名字
TARGET_NAME = "lhttp"

----工程类型: static/dynamic/exe
PROJECT_TYPE = "dynamic"

--需要的FLAGS
FLAGS = {
	"Wno-unused-variable",
	"Wno-unused-parameter",
	"Wno-unused-but-set-parameter",
    "Wno-unused-function",
    "Wno-sign-compare",
}

--需要的include目录
INCLUDES = {
	"../lua/lua"
}

--需要定义的选项
DEFINES = {
	"LHTTP_EXPORT"
}

--需要连接的库文件
LIBS = {
	"lua"
}

--依赖项目
DEPS = {
	"lualib"
}

--分组定义
GROUP = "luaext"
